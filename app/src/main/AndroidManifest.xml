<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.britawallet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.application.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".feature.login.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".feature.reward.RewardActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".feature.home.HomeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".feature.profile.ProfileActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".feature.exchange.ExchangeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".feature.history.HistoryActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>